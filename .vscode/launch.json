{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Run in Brave",
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceFolder}",
            "userDataDir": false,
            "runtimeArgs": ["--auto-open-devtools-for-tabs"],
            "runtimeExecutable": "/Applications/Brave Browser.app/Contents/MacOS/Brave Browser"
        }
    ]
}
